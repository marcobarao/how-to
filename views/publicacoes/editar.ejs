<%- include('../header') %>
<form action="/publicacoes/editar/<%= categoria %>/<%= publicacoes.id %>" method="POST">
  <div class="form-group">
    <label for="titulo">Titulo</label>
    <input type="text" class="form-control" id="titulo" placeholder="Insira o titulo da publicação" name="titulo" value="<%= publicacoes.titulo %>">
  </div>
  <div class="form-group">
    <label for="conteudo">Conteúdo</label>
    <textarea type="text" class="form-control" id="conteudo" placeholder="Insira o conteúdo da publicação" name="conteudo"><%= publicacoes.conteudo %></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Salvar</button>
</form>
<%- include('../footer') %>